<div class="col-md-10 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Vista completa del art√≠culo</h3>
        </div>
        <div class="card-body">
            <form action="/articulo/edit-article/{{articulo._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">

                <div>
                    TIPO DE REVISTA
                    <fieldset disabled>
                        <div class="form-group">
                            <input type="text" name="tipo" class="form-control" placeholder="magazine"
                                value="{{articulo.tipo}}">
                        </div>
                    </fieldset>
                </div>
                <div>
                    TITULO DEL ARTICULO
                    <fieldset disabled>
                        <div class="form-group">
                            <textarea type="text" name="nombreA" class="form-control">{{articulo.nombreA}}</textarea>
                        </div>
                    </fieldset>
                </div>

                <div>
                    AUTORES
                    <fieldset disabled>
                        <div class="form-group">
                            <input type="text" name="autor" class="form-control" placeholder="Author"
                                value="{{articulo.autor}}">
                        </div>
                    </fieldset>
                </div>

                <div>
                    URL
                    <fieldset disabled>
                        <div class="form-group">
                            <input type="text" name="url" class="form-control" placeholder="url"
                                value="{{articulo.url}}">
                        </div>
                    </fieldset>
                </div>

                <div>
                    SUBIDO POR
                    <fieldset disabled>
                        <div class="form-group">
                            <input type="text" name="nombre" class="form-control" value="{{articulo.nombre}}">
                        </div>
                    </fieldset>
                </div>

                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Regresar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>