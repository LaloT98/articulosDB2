                        <fieldset disabled>
                            <div class="form-group">
                                <input type="text" class="form-control" value="{{usuario.RFC}}">
                            </div>
                        </fieldset>
                    </div>

                    <div>
                        Numero de contacto
                        <fieldset disabled>
                            <div class="form-group">
                                <input type="text" class="form-control" value="{{usuario.telefono}}">
                            </div>
                        </fieldset>
                    </div>

                    <div>
                        CVU
                        <fieldset disabled>
                            <div class="form-group">
                                <input type="text" class="form-control" value="{{usuario.CVU}}">
                            </div>
                        </fieldset>
                    </div>

                    <div>
                        Licenciatura
                        <fieldset disabled>
                            <div class="form-group">
                                <input type="text" class="form-control" value="{{usuario.licenciatura}}">
                            </div>
                        </fieldset>
                    </div>
                    <div>
                        Maestria
                        <fieldset disabled>
                            <div class="form-group">
                                <input type="text" class="form-control" value="{{usuario.maestria}}">
                            </div>
                        </fieldset>
                    </div>
                    <div>
                        Doctorado
                        <fieldset disabled>
                            <div class="form-group">
                                <input type="text" class="form-control" value="{{usuario.doctorado}}">
                            </div>
