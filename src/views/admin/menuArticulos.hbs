<div class="card">
    <div class="card-header text-center">
        <h2>Datos De los Articulos</h3>
    </div>
    <div class="card-body">
        <table class="table table-dark table-info text-center">
            <thead>
                <tr>
                    <th scope="col">Matrícula</th>
                    <th scope="col">Tipo</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Autores</th>
                    <th scope="col">URL</th>
                </tr>
            </thead>

            <tbody class="table-light" id="letraTabla">
                {{#each TodosArticulos}}
                <tr>
                    <th scope="row">{{matricula}}</th>
                    <td>{{tipo}}</td>
                    <td>{{nombreA}}</td>
                    <td>{{autor}}</td>
                    <td>{{url}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<div class="card">
    <div class="card-header text-center">
        <h2>Datos Del Archivo almacenado</h3>
    </div>
    <div class="card-body">
        <table class="table table-dark table-info text-center">
            <thead>
                <tr>
                    <th scope="col">Matrícula</th>
                    <th scope="col">Nombre Original</th>
                    <th scope="col">Filename</th>
                    <th scope="col">Tipo de archivo</th>
                    <th scope="col">Tamaño</th>
                </tr>
            </thead>

            <tbody class="table-light" id="letraTabla">
                {{#each TodosArticulos}}
                <tr>
                    <th scope="row">{{matricula}}</th>
                    <td>{{originalname}}</td>
                    <td>{{filename}}</td>
                    <td>{{mimetype}}</td>
                    <td>{{size}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>



